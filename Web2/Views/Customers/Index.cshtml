@using Web2.Models;
<!DOCTYPE html>
<html>
<head>
    <title>Customers</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    <div id="wrapper" style="max-width: 70%; margin: auto;">
        <h1 class="jumbotron" style="text-align:center">Customerlist</h1>
        <div class="table-responsive">

            <table class="table">
                <thead>
                    <tr>
                        <th>Company name</th>
                        <th>Adress</th>
                        <th>Number of employees</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Customer customer in ViewBag.Customers)
                    {
                        <tr>
                            <td>@customer.CompanyName</td>
                            <td>@customer.Address</td>
                            <td>@customer.EmployeeCount</td>
                            <td><form action="/customers/delete/@customer.Id" method="post"><input type="submit" class="btn btn-default" value="Remove" /></form></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div style="display: flex; flex-direction: column; justify-content: center;">
            <a href="/customers/create" class="btn btn-default" style="margin-top:30px; width: 50%; margin: auto;">Add customer</a>
        </div>
    </div>
</body>
</html>
