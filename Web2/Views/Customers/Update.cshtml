@using Web2.Models;
<!DOCTYPE html>
<html>
<head>
    <title>Update</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
</head>
<body>
    <div id="wrapper" style="max-width: 70%; margin: auto;">
        <h1 class="jumbotron" style="text-align:center">Edit Customer</h1>
        <div class="table-responsive">
            <form action="/customers/update/@ViewBag.Customer.Id" method="post">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Company name</th>
                            <th>Address</th>
                            <th>Number of employees</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            @{Customer customer = ViewBag.Customer;
                            <td><input class="input-lg" style="width: 100%;" type="text" name="CompanyName" value="@customer.CompanyName" /></td>
                            <td><input class="input-lg" style="width: 100%;" type="text" name="Address" value="@customer.Address"/></td>
                            <td><input class="input-lg" style="width: 100%;" type="text" name="EmployeeCount" value="@customer.EmployeeCount" /></td>
                            }
                        </tr>
                    </tbody>
                </table>
                <div style="display: flex; flex-direction: column; justify-content: center;">
                    <input type="submit" value="Save Edits" class="btn btn-default" style="margin-top:30px; margin: auto; width: 50%;" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
